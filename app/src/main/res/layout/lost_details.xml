<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.proj2.ibet.activity.MainActivity">
    <TextView
            android:text="Enter your registered email or phone number. We'll email/text you a code to reset your password."
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/lost_details_info"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" android:textSize="25sp"
            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Email or phone number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/email_phone"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"  android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/lost_details_info"/>

    <EditText
            android:layout_width="390dp"
            android:layout_height="39dp"
            android:ems="10"
            android:background="@drawable/border"
            android:id="@+id/email_phone_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_phone" android:autofillHints=""/>

    <Button
            android:text="Send reset password code"
            android:layout_width="387dp"
            android:layout_height="33dp" android:id="@+id/send_code"
            android:background="@color/com_facebook_button_login_silver_background_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/email_phone_text"
            android:clickable="true"
            android:enabled="false"/>

    <TextView
            android:text="Forgot your username?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/forgot_username"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"  android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/send_code"
            android:clickable="true"/>

    <TextView
            android:text="Forgot which email to use?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/forgot_email"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"  android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/forgot_username"
            android:clickable="true"/>

    <TextView
            android:text="Get an anonymous account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/anonymous_account"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"  android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/forgot_email"
            android:textStyle="bold"/>

    <TextView
            android:text="Please get in touch with our customer service for assistance."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/anonymous_info"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/anonymous_account"/>

    <Button
            android:text="Chat with us"
            android:layout_width="285dp"
            android:layout_height="41dp" android:id="@+id/chat_button"
            android:background="@color/com_facebook_button_login_silver_background_color"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/anonymous_info"/>

</android.support.constraint.ConstraintLayout>