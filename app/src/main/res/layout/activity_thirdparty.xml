<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <Button android:layout_width="63dp"
                    android:layout_height="23dp"
                    android:id="@+id/depo_method_show"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="14dp"/>
            <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#747175"
                    android:lineSpacingExtra="5sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Please take a photo of the QR code  or alternatively click  on the link below to open directly"
            />
            <WebView
                    android:id="@+id/webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

            </WebView>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="42dp"/>
            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="18dp"
                          android:layout_marginRight="18dp"
                          android:layout_marginTop="15dp"

            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#4a4a4a"
                        android:text="Deposit Method"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:textColor="#4a4a4a"
                        android:id="@+id/payment_method"
                        android:text="AliPay"
                />
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="15dp"/>
            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="18dp"
                          android:layout_marginRight="18dp"
                          android:layout_marginTop="15dp"

            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#4a4a4a"
                        android:text="Order Number"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        android:textColor="#4a4a4a"
                        android:id="@+id/order_number"
                        android:text="111"
                />
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="15dp"/>
            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="18dp"
                          android:layout_marginRight="18dp"
                          android:layout_marginTop="15dp"

            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#4a4a4a"
                        android:text="Time"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:textColor="#4a4a4a"
                        android:id="@+id/time"
                        android:text="AliPay"
                />
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="15dp"/>
            <Button
                    android:background="@drawable/payment_confirm"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:id="@+id/deposit_check"
                    android:layout_marginTop="89dp"/>
            <Button
                    android:background="@drawable/payment_cancel"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:id="@+id/deposit_cancel"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="60dp"
            />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>