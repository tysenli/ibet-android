<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <Button android:layout_width="63dp"
                    android:layout_height="23dp"
                    android:id="@+id/depo_method_show"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#e7e7e7"
                    android:layout_marginTop="14dp"/>
            <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#747175"
                    android:lineSpacingExtra="5sp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Please take a photo of the QR code  or alternatively click  on the link below to open directly"
            />
            <WebView
                    android:id="@+id/webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

            </WebView>
            <Button
                    android:background="@drawable/payment_confirm"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:id="@+id/deposit_check"
                    android:layout_marginTop="89dp"/>
            <Button
                    android:background="@drawable/payment_cancel"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:id="@+id/deposit_cancel"
                    android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>