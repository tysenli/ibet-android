<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp">

    <ImageView
            android:id="@+id/game_img"
            android:layout_width="379dp"
            android:layout_height="153dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/game_image" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/game_title"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.6" android:background="#FAF9FA"/>

    <TextView
            android:id="@+id/game_title"
            android:layout_width="376dp"
            android:layout_height="51dp"
            app:layout_constraintTop_toBottomOf="@+id/game_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.6" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:text="Name" android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>