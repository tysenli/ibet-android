<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:minHeight="209dp"
                                             android:minWidth="300dp"
>


    <Button
            android:text="Confirm"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:id="@+id/confirm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/diposit_display"/>
    <Button
            android:text="Cancel"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:id="@+id/cancel"
            app:layout_constraintStart_toEndOf="@+id/confirm"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.045" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/diposit_display"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#252525"
            android:gravity="center_horizontal"
            tools:text="Confirm Deposit" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.438"
            android:id="@+id/text"/>
    <TextView
            android:layout_width="225dp"
            android:layout_height="34dp"
            android:textSize="18sp"
            android:textColor="#252525"
            android:gravity="center_horizontal"
            tools:text="0" android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.436"
            android:layout_marginTop="12dp" android:id="@+id/diposit_display"/>
</android.support.constraint.ConstraintLayout>