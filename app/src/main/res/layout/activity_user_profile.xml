<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <ScrollView
            android:layout_width="388dp"
            android:layout_height="572dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:fillViewport="false"
            android:scrollbars="none"
            android:id="@+id/scroll_user"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.578"
            app:layout_constraintHorizontal_bias="0.571">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:orientation="vertical">

            <LinearLayout android:layout_width="360dp"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                        android:text="Hi David                 "
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="4.5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user"
                />
                <TextView
                        android:text="                 Balance: $345.00"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView32"/>
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="vertical"
                          android:layout_width="360dp"
                          android:layout_height="142dp">
                <com.idtk.smallchart.chart.CurveChart
                        android:id="@+id/curveChart"
                        android:paddingTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <ImageView android:layout_width="360dp"
                       android:layout_height="82dp"
                       android:layout_marginTop="20dp"
                       android:background="@drawable/cash_100_345_00"
            />
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:layout_gravity="center"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.5sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="9sp"
                        android:gravity="center_horizontal"
                        android:text="All you need to know about your bonus."
                />
            </LinearLayout>

            <ImageView android:layout_width="360dp"
                       android:layout_height="91dp"
                       android:layout_marginTop="20dp"
                       android:background="@drawable/info_bar"
            />
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"
                          android:orientation="horizontal">
                <Button
                        android:text="Deposit"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="23sp"
                        android:drawableTop="@drawable/deposit"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/deposit"
                />
                <Button
                        android:text="Withdraw"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="23sp"
                        android:drawableTop="@drawable/withdraw"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/withdraw"/>
            </LinearLayout>


            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <Button
                        android:text="Open Bets"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="24sp"
                        android:drawableTop="@drawable/open_bets"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/open_bets"
                />
                <Button
                        android:text="Settled Bets"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="23sp"
                        android:drawableTop="@drawable/chip"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/settled_bets"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <Button
                        android:text="Promotions"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="24sp"
                        android:drawableTop="@drawable/promotion"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/promotions"/>
                <Button
                        android:text="Settings"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="23sp"
                        android:drawableTop="@drawable/settings"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/settings"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <Button
                        android:text="Help"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="33sp"
                        android:drawableTop="@drawable/help"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/help"/>
                <Button
                        android:text="Responsible Gambling"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="23sp"
                        android:drawableTop="@drawable/responsible"
                        android:background="@drawable/border"
                        android:layout_height="90dp"
                        android:id="@+id/responsible"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <Button
                        android:text="Edit Profile"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="15sp"
                        android:drawableTop="@drawable/user2"
                        android:background="#ffffff"
                        android:layout_height="60dp"
                        android:id="@+id/edit_profile"/>
                <Button
                        android:text="Logout"
                        android:layout_width="180dp"
                        android:textAllCaps="false"
                        android:textSize="15.8sp"
                        android:textColor="#212121"
                        android:letterSpacing="0.04"
                        android:paddingTop="13sp"
                        android:drawableTop="@drawable/logout"
                        android:background="#ffffff"
                        android:layout_height="60dp"
                        android:id="@+id/logout"/>
            </LinearLayout>
            <Button
                    android:text="Change Password"
                    android:layout_width="360dp"
                    android:textAllCaps="false"
                    android:background="@drawable/border"
                    android:textSize="13.5sp"
                    android:textColor="#04599a"
                    android:letterSpacing="0.04"
                    android:layout_height="44dp"
                    android:id="@+id/change_password"
            />

        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>