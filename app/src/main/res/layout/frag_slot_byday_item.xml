<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.0">

        <TextView android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="Day"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/day"
        />
        <TextView android:layout_width="55dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="Spins"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/spins_day"
        />
        <TextView android:layout_width="50dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="RTP"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/rtp_day"
        />
        <TextView android:layout_width="70dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="Bet"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/bet_day"
        />
        <TextView android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="Win"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/win_day"
        />
        <TextView android:layout_width="60dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="P&amp;L"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/pl_day"
        />
        <TextView android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="Biggest Win"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/biggest_win"
        />
        <TextView android:layout_width="70dp"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="Bonuses"
                  android:textStyle="bold"
                  android:textSize="12sp"
                  android:textColor="#000000"
                  android:id="@+id/bonus"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>