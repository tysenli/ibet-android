<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <TextView
            android:text="Future of online betting"
            android:layout_width="269dp"
            android:layout_height="44dp"
            android:id="@+id/textView2"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:textSize="24sp" android:textStyle="bold"
            android:textColor="#212121"
            android:lineSpacingExtra="19.7sp"

            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.466"/>

    <TextView
            android:text="What credentials would you like to use\nfor your ibet account?"
            android:layout_width="275.5dp"
            android:layout_height="60.5dp"
            android:id="@+id/textView3"
            android:textSize="15sp"
            android:textColor="#747175"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="9sp"
            android:gravity="center_horizontal"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <Button
            android:id="@+id/btnLoginFacebook"
            android:layout_width="273dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/facebook"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@android:color/widget_edittext_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            android:textSize="16sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <Button
            android:id="@+id/btnLoginTwitter"
            android:layout_width="272dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/twitter"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@android:color/widget_edittext_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            android:textSize="16sp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginFacebook"/>

    <TextView
            android:layout_width="341dp"
            android:layout_height="12dp"
            android:background="@drawable/line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginTwitter" android:layout_marginTop="29dp"
            android:id="@+id/textView15"/>

    <Button
            android:id="@+id/btnLoginEmail"
            android:layout_width="272dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/btn_red"
            android:text="REGISTER"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:textSize="15sp"
            android:letterSpacing="0.03"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"/>
    <Button
            android:id="@+id/btnOneClick"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/btn_black"
            android:text="REGISTER WITH ONE CLICK"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            android:textSize="16sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btnLoginEmail"/>

    <TextView
            android:text="@string/we_will_sometimes_send_you_emails_with_offers_n_regarding_our_services_you_can_unsubscribe_n_from_receiving_these_emails_at_any_time_free_n_of_charge_n_nby_signing_up_you_agree_to_ibet_s_terms_and_conditions_and_confirm_that_you_ve_read_and_understood_the_privacy_policy"
            android:layout_width="316dp"
            android:layout_height="80dp"
            android:id="@+id/textView4"
            android:textSize="12sp"
            android:textColor="#747175"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btnOneClick"/>
    <TextView
            android:text="@string/policy"
            android:layout_width="316dp"
            android:layout_height="60dp"
            android:id="@+id/textView5"
            android:textSize="12sp"
            android:textColor="#747175"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>


</android.support.constraint.ConstraintLayout>