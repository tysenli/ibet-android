<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
            android:id="@+id/btn_bank_withdraw"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/deposit_btn"
            android:text="Withdraw"
            android:textColor="#4e4f4e"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/amount_display"
            app:layout_constraintStart_toEndOf="@+id/cancel_withdraw_method" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:id="@+id/cancel_withdraw_method"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/deposit_btn"
            android:text="cancel"
            android:textColor="#4e4f4e"
            android:textSize="16sp"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/amount_display" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Withdraw Amount"
            android:layout_width="134dp"
            android:layout_height="25dp"
            android:id="@+id/withdraw_err"
            android:textColor="#292929"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#292929"
            android:gravity="end"
            android:text="Minimum 10.00"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/withdraw_err"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.821"/>
    <View
            android:id="@+id/divider7"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/amount_display" android:layout_marginBottom="136dp"
            app:layout_constraintTop_toBottomOf="@+id/withdraw_err" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:text="0"
            android:background="#ffffff"
            android:layout_width="130dp"
            android:layout_height="63dp"
            android:textColor="#292929"
            android:textSize="40sp"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/amount_display"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="136dp"
            android:layout_marginTop="112dp" app:layout_constraintTop_toBottomOf="@+id/withdraw_err"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"/>
    <TextView
            android:text=""
            android:layout_width="310dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:id="@+id/amt_err" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/amount_display" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>