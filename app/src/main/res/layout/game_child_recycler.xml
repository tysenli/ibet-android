<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="100dp"
                                   android:layout_height="100dp"
                                   android:layout_margin="12dp">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newGame_img"
            android:layout_gravity="center_horizontal"
            android:foreground="@drawable/image_overlay"/>
    <TextView
            android:text="TextView"
            android:id="@+id/newGame_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2sp"
            android:layout_marginLeft="8dp" android:layout_marginTop="76dp"
            android:layout_marginRight="18dp" android:layout_marginBottom="11dp"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" card_view:srcCompat="@drawable/save_bookmark"
            android:id="@+id/save_game_img" android:layout_marginLeft="80dp" android:layout_marginBottom="76dp"/>
</androidx.cardview.widget.CardView>