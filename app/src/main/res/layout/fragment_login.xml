<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:layout_width="205dp"
            android:layout_height="26dp"
            android:id="@+id/sign_up_here" app:layout_constraintStart_toStartOf="parent"
            android:text="Not a member? Sign up for free"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/design_default_color_primary" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password"/>
    <TextView
            android:text="Log in to ibet"
            android:layout_width="225dp"
            android:layout_height="33dp"
            android:id="@+id/tv_login" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:fontFamily="sans-serif"
            android:textSize="24sp" android:typeface="normal" android:textStyle="bold"/>
    <TextView
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/tv_login"/>
    <EditText
            android:layout_width="374dp"
            android:layout_height="37dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_email" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_email1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:autofillHints=""/>


    <TextView
            android:text="@string/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_password1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/login_email"/>
    <EditText
            android:layout_width="375dp"
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password" android:layout_marginTop="8dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/tv_password1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:autofillHints=""/>

    <CheckBox
            android:text="@string/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox1" android:textSize="14sp"
            android:textStyle="italic" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/login_password" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="28dp"/>
    <CheckBox
            android:text="Keep me logged in on this device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/login_password"/>
    <!--
    <Button
            android:id="@+id/usersignup"
            android:layout_width="378dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@android:color/widget_edittext_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            android:textSize="16sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/sign_up_here"/>
     -->
    <Button
            android:id="@+id/userlogin"
            android:layout_width="378dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textColor="@android:color/widget_edittext_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="104dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sign_up_here"/>
    <TextView
            android:text="Forgot password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"
            android:textColor="@color/design_default_color_primary"/>


</android.support.constraint.ConstraintLayout>