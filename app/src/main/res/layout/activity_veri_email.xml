<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <Button
            android:text="verify"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/veri_email" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_red"
            android:textSize="15sp"
            android:textColor="#f3f3f3"
            android:letterSpacing="0.04"
            app:layout_constraintHorizontal_bias="0.505" android:layout_marginTop="263dp"
            app:layout_constraintTop_toBottomOf="@+id/email_verify"/>
    <EditText
            android:layout_width="325dp"
            android:layout_height="47dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_verify"
            android:hint=" EMAIL ADDRESS"
            android:textColorHint="#212121"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:autofillHints=""
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintHorizontal_bias="0.511"/>
    <TextView android:layout_width="322dp" android:layout_height="39dp"
              android:background="@drawable/email_details"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/textView17" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
              app:layout_constraintHorizontal_bias="0.444"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="59dp"/>

</android.support.constraint.ConstraintLayout>

