<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#292929"
            android:text="Online Payment"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView58"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".28"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/divider11" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="18dp" android:id="@+id/relativeLayout2">
        <Spinner
                android:id="@+id/bank_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#ffffff"
                android:popupBackground="#ffffff"
                android:spinnerMode="dropdown" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="2dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/drop_btn"/>

    </RelativeLayout>
    <Button
            android:text="100"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_100"
            android:background="#efefef"
            app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="28dp" app:layout_constraintStart_toEndOf="@+id/money_50"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="250"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_250"
            android:background="#efefef"
            app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="28dp" app:layout_constraintStart_toEndOf="@+id/money_100"
            android:layout_marginStart="20dp" android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"/>
    <Button
            android:id="@+id/btn_wechat_dep"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/deposit_btn"
            android:text="Next"
            android:textColor="#4e4f4e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/divider8" android:layout_marginTop="48dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.223"/>
    <Button
            android:id="@+id/change_method"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/deposit_btn"
            android:text="cancel"
            android:textColor="#4e4f4e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:textSize="16sp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/btn_wechat_dep"
    />
    <EditText
            android:layout_width="354dp"
            android:layout_height="53dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/deposit_amount2"
            android:hint=" Deposit 10 - 2,000                        Other"
            android:layout_marginStart="8dp"
            android:textColorHint="#4e4e4e"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:autofillHints="" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/money_100"/>

    <View
            android:id="@+id/divider7"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"/>
    <View
            android:id="@+id/divider11"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView58" android:layout_marginTop="10dp"/>
    <Button
            android:text="25"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_25"
            android:background="#efefef"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="28dp"/>
    <Button
            android:text="50"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_50"
            android:background="#efefef"
            app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="28dp" app:layout_constraintStart_toEndOf="@+id/money_25"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="0"
            android:layout_width="83dp"
            android:layout_height="35dp"
            android:textColor="#292929"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:id="@+id/amount_display" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/deposit_amount2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="Total"
            android:layout_width="55dp"
            android:layout_height="34dp"
            android:textColor="#292929"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:id="@+id/textview_total" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/deposit_amount2"
            app:layout_constraintStart_toEndOf="@+id/amount_display" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.896"/>
    <View
            android:id="@+id/divider8"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="#2c2c2c"
            app:layout_constraintTop_toBottomOf="@+id/amount_display" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.314"/>
    <TextView
            android:text="Fee: Free"
            android:layout_width="63dp"
            android:layout_height="22dp"
            android:id="@+id/fee"
            app:layout_constraintTop_toBottomOf="@+id/divider8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="12dp"/>
    <TextView
            android:text="Process Time: 1-3 days"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/process"
            app:layout_constraintTop_toBottomOf="@+id/divider8" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/fee" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.85"/>
    <TextView
            android:text="Please deposit between 20 - 2000"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/amt_input_err"
            android:textColor="#c90000"
            app:layout_constraintTop_toBottomOf="@+id/deposit_amount2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>