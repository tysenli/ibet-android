<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
            android:text="$100"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_100"
            android:background="#efefef"
            app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="36dp" app:layout_constraintStart_toEndOf="@+id/money_50"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="$250"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_250"
            android:background="#efefef"
            app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="36dp" app:layout_constraintStart_toEndOf="@+id/money_100"
            android:layout_marginStart="20dp" android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"/>
    <Button
            android:id="@+id/btn_wechat_dep"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="#d8d8d8"
            android:text="Deposit"
            android:textColor="#4e4f4e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.474"
            android:textSize="16sp"
            tools:layout_editor_absoluteY="428dp"/>
    <Button
            android:id="@+id/change_method"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="#d8d8d8"
            android:text="change deposit method"
            android:textColor="#4e4f4e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:textSize="16sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_wechat_dep"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.114"/>
    <EditText
            android:layout_width="354dp"
            android:layout_height="53dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/deposit_amount2"
            android:hint=" Deposit $10 - $2,000"
            android:layout_marginStart="8dp"
            android:textColorHint="#4e4e4e"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:autofillHints="" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/money_100"/>
    <TextView
            android:text="Deposit Amount"
            android:layout_width="287dp"
            android:layout_height="29dp"
            android:id="@+id/textView43"
            android:textColor="#292929"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <View
            android:id="@+id/divider7"
            android:layout_width="395dp"
            android:layout_height="1dp"

            android:background="#e7e7e7"
            app:layout_constraintTop_toBottomOf="@+id/textView43" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="$25"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_25"
            android:background="#efefef"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="36dp"/>
    <Button
            android:text="$50"
            android:layout_width="72dp"
            android:layout_height="44dp"
            android:id="@+id/money_50"
            android:background="#efefef"
            app:layout_constraintTop_toBottomOf="@+id/divider7"
            android:layout_marginTop="36dp" app:layout_constraintStart_toEndOf="@+id/money_25"
            android:layout_marginStart="20dp"/>

</android.support.constraint.ConstraintLayout>