<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/show_group_layout"
                                                   android:layout_height="41dp">

    <TextView
            android:id="@+id/filter_title"
            android:textSize="12sp"
            android:lineSpacingExtra="29sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="21dp"
            android:layout_height="11dp"
            tools:src="@drawable/back2"
            android:id="@+id/filter_unwarp"
            tools:visibility="visible"
            android:contentDescription="unwarp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.6" android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

