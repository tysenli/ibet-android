<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Deposit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/deposit_btn"
            android:id="@+id/deposit" android:layout_marginTop="160dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Withdraw"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/deposit_btn"
            android:id="@+id/withdraw"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/deposit"/>
    <Button
            android:text="Total"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/deposit_btn"
            android:id="@+id/total"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/withdraw"/>
</android.support.constraint.ConstraintLayout>