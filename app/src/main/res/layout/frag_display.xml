<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
        >
            <TextView
                    android:text="@string/game"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/textView32"
                    android:textSize="24sp"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:layout_marginTop="50dp"
            >
                <ImageView android:layout_width="178dp"
                           android:layout_height="167dp"
                           android:background="@drawable/gift"
                           android:id="@+id/imageView8"/>
                <ImageView android:layout_width="178dp"
                           android:layout_height="167dp"
                           android:background="@drawable/gift"
                           android:id="@+id/imageView5"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center"
            >
                <ImageView android:layout_width="178dp"
                           android:layout_height="167dp"
                           android:background="@drawable/gift"
                           android:id="@+id/imageView7"
                />
                <ImageView android:layout_width="178dp"
                           android:layout_height="167dp"
                           android:background="@drawable/gift"
                           android:id="@+id/imageView6"
                />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="#212121"
                          android:orientation="vertical"
                          android:layout_marginTop="150dp"
            >
                <TextView android:layout_width="67dp"
                          android:layout_height="28dp"
                          android:background="@drawable/logo"
                          android:layout_marginTop="42dp"
                          android:layout_marginLeft="32dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#cdcbcc"
                        android:lineSpacingExtra="4sp"
                        android:text="Language:"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="30dp"
                />
                <RelativeLayout
                        android:layout_width="192dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight=".28"
                        android:background="#cdcbcc"
                        android:orientation="horizontal">
                    <Spinner
                            android:id="@+id/language_navi"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="#212121"
                            android:popupBackground="#212121"
                            android:spinnerMode="dropdown" android:layout_alignParentStart="true"
                            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
                            android:layout_marginTop="1dp" android:layout_marginBottom="1dp"
                           />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="12dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/down"/>

                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#e9e8e8"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="5sp"
                        android:text="GX4"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#cdcbcc"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="5sp"
                        android:text="Gamblers Anonymous"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#dddcdd"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="5sp"
                        android:text="GameCare "
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#e2e0e1"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="5sp"
                        android:text="Game Stop"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#d9d7d8"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="5sp"
                        android:text="Support"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#dddcdd"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="5sp"
                        android:text="Affiliate "
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:textStyle="bold"
                />
                <View
                        android:id="@+id/divider5"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#cdcbcc"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="26dp"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginTop="15dp"
                              android:layout_marginLeft="30dp"
                >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#cdcbcc"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="10sp"
                            android:text="Privacy Policy"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#d3d1d2"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="10sp"
                            android:text="Cookie Policy"
                            android:layout_marginLeft="38dp"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#d9d7d8"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="10sp"
                            android:gravity="end"
                            android:text="Terms &amp; Conditions"
                            android:layout_marginLeft="38dp"
                    />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginTop="28dp"
                              android:layout_marginLeft="30dp"
                >
                    <ImageView android:layout_width="34dp"
                               android:layout_height="34dp"
                               android:src="@drawable/eighteen"
                    />
                    <ImageView android:layout_width="87dp"
                               android:layout_height="34dp"
                               android:src="@drawable/mga_logo"
                               android:layout_marginLeft="45dp"
                    />
                    <ImageView android:layout_width="88dp"
                               android:layout_height="27dp"
                               android:src="@drawable/ecogra"
                               android:layout_marginLeft="45dp"
                    />



                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="15dp"
                        android:textSize="10sp"
                        android:textColor="#d8d8d8"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="6sp"
                        android:text="The main priority for us at ibet is to provide an enjoyable and entertaining gaming experience. We are committed to protecting our players and offer several different tools and resources to ensure that your gambling is conducted within safe limits. Please visit these at [RG Link] and if you are in any doubt contact our trained customer service at any time."
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginTop="30dp"
                              android:layout_marginLeft="30dp"
                >
                    <ImageView android:layout_width="31dp"
                               android:layout_height="10dp"
                               android:src="@drawable/footer_visa"
                               android:layout_gravity="center"
                    />
                    <ImageView android:layout_width="26dp"
                               android:layout_height="16dp"
                               android:src="@drawable/footer_master"
                               android:layout_marginLeft="18dp"
                               android:layout_gravity="center"
                    />
                    <ImageView android:layout_width="36dp"
                               android:layout_height="38dp"
                               android:src="@drawable/footer_bank"
                               android:layout_marginLeft="18dp"
                               android:layout_gravity="center"
                    />
                    <ImageView android:layout_width="40dp"
                               android:layout_height="12dp"
                               android:src="@drawable/footer_paypal"
                               android:layout_marginLeft="18dp"
                               android:layout_gravity="center"
                    />
                    <ImageView android:layout_width="47dp"
                               android:layout_height="10dp"
                               android:src="@drawable/footer_neteller"
                               android:layout_marginLeft="18dp"
                               android:layout_gravity="center"
                    />
                    <ImageView android:layout_width="30dp"
                               android:layout_height="10dp"
                               android:src="@drawable/footer_skrill"
                               android:layout_gravity="center"
                               android:layout_marginLeft="18dp"
                    />

                </LinearLayout>
                <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#cdcbcc"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="26dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="25dp"
                        android:textSize="10sp"
                        android:textColor="#bebebe"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="6sp"
                        android:text="The operator of this website is The Claymore Group Ltd, a Maltese company registration number C-90400, having its registered address at Level4, Ewropa Business Centre, Triq Dun Karm, Birkirkara BKR 9034, Malta. The Claymore Group Ltd is licensed and regulated by the Malta Gaming Authority under license XXXXXX issued on XXXXX (TBD). "
                />


            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>