<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/game_card_view"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:textSize="21sp"
                android:textColor="#252525"
                android:lineSpacingExtra="15sp"
                android:id="@+id/category_title"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintBottom_toTopOf="@+id/game_child_recycler"
                android:layout_marginStart="16dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/game_child_recycler"
                card_view:layout_constraintStart_toStartOf="parent" card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintBottom_toTopOf="@+id/viewAllButton" android:layout_marginBottom="15dp"
                android:layout_marginStart="16dp"/>
        <Button
                android:text="View All >"
                android:layout_width="80dp"
                android:textAllCaps="false"
                android:layout_height="22dp"
                android:id="@+id/viewAllButton"
                android:background="#00F1EDED"
                android:textSize="15sp"
                android:textColor="#ff0000"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="7sp"
                card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                card_view:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
        />
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="121dp"
                android:layout_height="11dp"
                android:id="@+id/GameProgressBar"

                card_view:layout_constraintBottom_toTopOf="@+id/game_child_recycler" android:layout_marginBottom="10dp"
                card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>