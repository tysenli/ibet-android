<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TextInputLayout
            android:layout_width="325dp"
            android:layout_height="60dp"
            app:passwordToggleEnabled="true"
            android:id="@+id/layout1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent">
        <EditText
                android:layout_width="325dp"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/cur_pass"
                android:textColorHint="#212121"
                android:hint=" CURRENT PASSWORD"
                android:background="@drawable/border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="325dp"
            android:layout_height="60dp"
            app:passwordToggleEnabled="true"
            android:id="@+id/layout2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/layout1">
        <EditText
                android:layout_width="325dp"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/new_pass"
                android:textColorHint="#212121"
                android:hint=" NEW PASSWORD"
                android:background="@drawable/border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="325dp"
            android:layout_height="60dp"
            app:passwordToggleEnabled="true"
            android:id="@+id/layout3"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/layout2">
        <EditText
                android:layout_width="325dp"
                android:layout_height="47dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/confirm_pass"
                android:textColorHint="#212121"
                android:hint=" CONFIRM PASSWORD"
                android:background="@drawable/border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="change password"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textSize="15.7sp"
            android:textColor="#f3f3f3"
            android:letterSpacing="0.04"
            android:id="@+id/change_pass"
            android:background="@drawable/btn_red"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginTop="88dp" app:layout_constraintTop_toBottomOf="@+id/layout3"/>

</android.support.constraint.ConstraintLayout>