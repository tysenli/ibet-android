<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="0.07"
            android:lineSpacingExtra="10sp"
            android:text="FirstName"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
            android:layout_marginStart="29dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/acc_first_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="0.07"
            android:lineSpacingExtra="10sp"
            android:text="ID:"
            android:id="@+id/acc_id"
            app:layout_constraintTop_toBottomOf="@+id/acc_first_name" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:letterSpacing="0.07"
            android:lineSpacingExtra="10sp"
            android:text="LastName"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
            android:id="@+id/acc_last_name" app:layout_constraintStart_toEndOf="@+id/acc_first_name"
            android:layout_marginStart="8dp"/>
    <Button android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="#b3000000"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.06"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="Edit"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/acc_last_name"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.887"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/profile"
               app:layout_constraintTop_toBottomOf="@+id/acc_id" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="28dp" android:layout_marginTop="30dp" android:id="@+id/imageView10"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/email"
               app:layout_constraintTop_toBottomOf="@+id/imageView10" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="28dp" android:layout_marginTop="35dp" android:id="@+id/imageView11"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/lock"
               app:layout_constraintTop_toBottomOf="@+id/imageView11" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="28dp" android:layout_marginTop="35dp" android:id="@+id/imageView12"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/marker"
               app:layout_constraintTop_toBottomOf="@+id/imageView12" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="35dp" android:layout_marginStart="28dp" android:id="@+id/imageView13"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/phone_call"
               app:layout_constraintTop_toBottomOf="@+id/imageView13" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="28dp" android:layout_marginTop="35dp" android:id="@+id/imageView14"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/clock"
               app:layout_constraintTop_toBottomOf="@+id/imageView14" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="28dp" android:layout_marginTop="35dp" android:id="@+id/imageView15"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="10sp"
            android:text="Username"
            app:layout_constraintTop_toBottomOf="@+id/acc_first_name"
            android:layout_marginTop="56dp" app:layout_constraintStart_toEndOf="@+id/imageView10"
            android:layout_marginStart="36dp" android:id="@+id/textView59"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="10sp"
            android:text="Email"
            app:layout_constraintStart_toEndOf="@+id/imageView11" android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView59" android:layout_marginTop="36dp"
            android:id="@+id/textView60"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="10sp"
            android:text="Password"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView60" app:layout_constraintStart_toEndOf="@+id/imageView12"
            android:layout_marginStart="40dp" android:id="@+id/textView61"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="10sp"
            android:text="Address"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView61" app:layout_constraintStart_toEndOf="@+id/imageView13"
            android:layout_marginStart="40dp" android:id="@+id/textView62"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="10sp"
            android:text="Phone"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView62" app:layout_constraintStart_toEndOf="@+id/imageView14"
            android:layout_marginStart="36dp" android:id="@+id/textView63"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="10sp"
            android:text="Member Since"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            android:layout_marginStart="32dp" android:id="@+id/textView64"
            app:layout_constraintTop_toBottomOf="@+id/acc_phone" android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acc_username"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="6sp"
            android:text="Superman-888"
            app:layout_constraintTop_toBottomOf="@+id/textView59" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acc_email"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="6sp"
            android:text="Play123@qq.com"
            app:layout_constraintTop_toBottomOf="@+id/textView60" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acc_address"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="6sp"
            tools:text="221B Baker Street, London, NW1 6XE UK"
            app:layout_constraintTop_toBottomOf="@+id/textView62" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acc_phone"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="6sp"
            android:text="+44 132829***89"
            app:layout_constraintTop_toBottomOf="@+id/textView63" android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"/>
    <LinearLayout android:layout_width="145dp" android:layout_height="95dp"
                  android:background="@drawable/shadow"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:visibility="visible"
                  android:id="@+id/acc_support"
                  android:layout_marginStart="28dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView64">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/help"
                  android:paddingTop="10dp"
                  android:text="Support"
                  android:textSize="20sp"
                  android:textColor="#d9000000"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="145dp" android:layout_height="95dp"
                  android:background="@drawable/shadow"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:visibility="visible"
                  android:id="@+id/acc_inbox"
                  android:layout_marginTop="30dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView64"
                  app:layout_constraintStart_toEndOf="@+id/acc_support" android:layout_marginStart="8dp"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.35">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/inbox"
                  android:paddingTop="10dp"
                  android:text="Inbox"
                  android:textSize="20sp"
                  android:textColor="#d9000000"
        />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>