<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="false"
            android:id="@+id/scroll"
            android:layout_marginStart="8dp"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
    >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.07"
                        android:lineSpacingExtra="10sp"
                        android:text="FirstName"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
                        android:layout_marginStart="29dp" app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/acc_first_name"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.07"
                        android:lineSpacingExtra="10sp"
                        android:layout_marginLeft="3dp"
                        android:text="LastName"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="14dp"
                        android:id="@+id/acc_last_name" app:layout_constraintStart_toEndOf="@+id/acc_first_name"
                        />
                <Button android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:background="#b3000000"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:letterSpacing="0.06"
                        android:textAllCaps="false"
                        android:text="Edit"
                        android:id="@+id/acc_edit"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="140dp"
                        app:layout_constraintHorizontal_bias="0.887"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.07"
                    android:lineSpacingExtra="10sp"
                    android:text="ID:"
                    android:id="@+id/acc_id"
                    app:layout_constraintTop_toBottomOf="@+id/acc_first_name" android:layout_marginStart="28dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/profile"
                           app:layout_constraintTop_toBottomOf="@+id/acc_id"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="28dp" android:layout_marginTop="30dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="10sp"
                        android:text="Username"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="30dp"
                />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/acc_username"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="6sp"
                    android:text="Superman-888"
                    android:layout_marginStart="84dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/email"
                           app:layout_constraintTop_toBottomOf="@+id/acc_id"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="28dp" android:layout_marginTop="30dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="6sp"
                        android:text="Email"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="30dp"
                        app:layout_constraintStart_toStartOf="parent"/>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/acc_email"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="6sp"
                    android:text="Play123@qq.com"
                    android:layout_marginStart="84dp"
            />
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/lock"
                           app:layout_constraintTop_toBottomOf="@+id/acc_id"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="28dp" android:layout_marginTop="30dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="10sp"
                        android:text="Password"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="30dp"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/marker"
                           app:layout_constraintTop_toBottomOf="@+id/acc_id"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="28dp" android:layout_marginTop="30dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="10sp"
                        android:text="Address"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="30dp"
                />
            </LinearLayout>
            <TextView
                    android:layout_width="275dp"
                    android:layout_height="53dp"
                    android:id="@+id/acc_address"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="6sp"
                    tools:text="221B Baker Street, London, NW1 6XE UK"
                    android:layout_marginStart="84dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"/>


            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/phone_call"
                           app:layout_constraintTop_toBottomOf="@+id/acc_id"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="28dp" android:layout_marginTop="30dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="10sp"
                        android:text="Phone"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="30dp"
                />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/acc_phone"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="6sp"
                    android:text="+44 132829***89"
                    android:layout_marginStart="84dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/clock"
                           app:layout_constraintTop_toBottomOf="@+id/acc_id"
                           app:layout_constraintStart_toStartOf="parent"
                           android:layout_marginStart="28dp" android:layout_marginTop="30dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="10sp"
                        android:text="Member Since"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="30dp"
                />
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="6sp"
                    android:text=""
                    android:layout_marginStart="84dp"
            />

<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:layout_width="145dp" android:layout_height="95dp"
                  android:background="@drawable/shadow"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:visibility="visible"
                  android:id="@+id/acc_support"
                  android:layout_marginStart="54dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="15dp"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/help"
                  android:paddingTop="10dp"
                  android:text="Support"
                  android:textSize="20sp"
                  android:textColor="#d9000000"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="145dp" android:layout_height="95dp"
                  android:background="@drawable/shadow"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:visibility="visible"
                  android:id="@+id/acc_inbox"
                  android:layout_marginTop="15dp"
                  app:layout_constraintStart_toEndOf="@+id/acc_support" android:layout_marginStart="8dp"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.098">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/inbox"
                  android:paddingTop="10dp"
                  android:text="Inbox"
                  android:textSize="20sp"
                  android:textColor="#d9000000"
        />

    </LinearLayout>
</LinearLayout>

    <Button android:layout_width="250dp"
            android:layout_height="45dp"
            android:id="@+id/logout"
            android:background="@drawable/logout"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/acc_support" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center_horizontal"
            app:layout_constraintHorizontal_bias="0.496"/>
        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>