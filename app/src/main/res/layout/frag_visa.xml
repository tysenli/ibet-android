<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:id="@+id/visa_continue"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/deposit_btn"
            android:text="Continue"
            android:textColor="#4e4f4e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:textSize="16sp"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/checkBox6"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#212121"
            android:text="Credit Card"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView44"/>
    <View
            android:id="@+id/divider9"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            app:layout_constraintTop_toBottomOf="@+id/textView44" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/cards"
            app:layout_constraintTop_toBottomOf="@+id/divider9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" android:layout_marginTop="13dp" android:id="@+id/textView46"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4a4a4a"
            android:text="Fee: Free\nProcess Time: 1-3 banking days"
            app:layout_constraintTop_toBottomOf="@+id/divider9"
            android:layout_marginTop="12dp" app:layout_constraintStart_toEndOf="@+id/textView46"
            android:layout_marginStart="19dp" android:id="@+id/textView47"/>
    <View
            android:id="@+id/divider10"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView47"
            android:layout_marginTop="12dp"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="44dp"
            android:id="@+id/card_name"
            android:hint=" Name"
            android:layout_marginStart="18dp"
            android:textColorHint="#4e4e4e"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:autofillHints="" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintTop_toBottomOf="@+id/divider10" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="44dp"
            android:id="@+id/card_num"
            android:hint=" Number"
            android:inputType="number"
            android:textColorHint="#4e4e4e"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:autofillHints=""
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.213"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/card_name"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:id="@+id/card_time"
            android:hint=" MM/YYYY"
            android:layout_marginStart="28dp"
            android:textColorHint="#4e4e4e"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:autofillHints=""
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/card_num"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:id="@+id/card_code"
            android:inputType="number"
            android:drawableRight="@drawable/credit_card_icon"
            android:padding="10dp"
            android:hint=" CVV"
            android:textColorHint="#4e4e4e"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:autofillHints=""
            app:layout_constraintStart_toEndOf="@+id/card_time"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.283" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/card_num"/>
    <CheckBox
            android:text="Remember card details for quicker deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/card_time"/>
    <CheckBox
            android:text="Make this my default deposit method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox6"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <TextView
            android:text="Please type name."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c90000"
            android:id="@+id/name_err" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/card_name" android:layout_marginTop="6dp"/>
    <TextView
            android:text="Please enter 16-digit card number."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c90000"
            android:id="@+id/num_err"
            app:layout_constraintTop_toBottomOf="@+id/card_num" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="6dp"/>
    <TextView
            android:text="Expired card."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c90000"
            android:id="@+id/date_err"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/card_time" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Invalid code."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c90000"
            android:id="@+id/code_err"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/card_code"
            android:layout_marginStart="204dp" app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>