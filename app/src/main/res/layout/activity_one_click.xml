<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Account created."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="34sp"
            android:lineSpacingExtra="8.6sp"
            android:gravity="center_horizontal"
            android:textColor="#212121"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Save these details and use them to resume play."
            android:layout_width="309dp"
            android:layout_height="56dp"
            android:id="@+id/textView10"
            android:textSize="20sp"
            android:textColor="#747175"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="USERNAME:\nPASSWORD:"
            android:layout_width="305dp"
            android:layout_height="55dp"
            android:textSize="15sp"
            android:textColor="#212121"
            android:letterSpacing="0.02"
            android:id="@+id/info" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:lineSpacingExtra="8sp"/>
    <!--
    <Button
            android:layout_width="48dp"
            android:layout_height="43dp"

            android:id="@+id/btn_ok" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@android:drawable/checkbox_on_background"/>
            -->
    <TextView
            android:id="@+id/copy_login_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:text="Copy login details"
            android:lineSpacingExtra="3.4sp"
            android:textColor="#04599a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:textSize="15.7sp"
            app:layout_constraintTop_toBottomOf="@+id/info" android:layout_marginTop="12dp"/>
    <Button
            android:id="@+id/send_to_email"
            android:background="@drawable/send_email"
            android:layout_width="306dp"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintTop_toBottomOf="@+id/copy_login_details" android:layout_marginTop="20dp"/>
    <Button
            android:id="@+id/send_to_phone"
            android:background="@drawable/send_sms"
            android:layout_width="306dp"
            android:layout_height="54dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintTop_toBottomOf="@+id/send_to_email" android:layout_marginTop="19dp"/>
    <Button
            android:id="@+id/first_deposit"
            android:background="@drawable/btn_red"
            android:layout_width="305.4dp"
            android:layout_height="53.8dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:text="Make my first deposit"
            android:textColor="#ffffff"
            android:letterSpacing="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            android:textSize="15sp"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/send_to_phone"/>
    <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16.8sp"
            android:textColor="#212121"
            android:letterSpacing="0.03"
            android:gravity="center_horizontal"
            android:text="@string/i_m_done"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/first_deposit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/policy"
            android:layout_width="345dp"
            android:layout_height="67dp"
            android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/done"/>



</android.support.constraint.ConstraintLayout>