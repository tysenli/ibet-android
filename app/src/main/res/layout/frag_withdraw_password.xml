<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
            android:id="@+id/pass_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/deposit_btn"
            android:text="Next"
            android:textColor="#4e4f4e"
            android:textSize="16sp"
            android:layout_marginTop="187dp"
            app:layout_constraintTop_toBottomOf="@+id/confirm_pass" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/pass_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/deposit_btn"
            android:text="cancel"
            android:textColor="#4e4f4e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/pass_next"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    <View
            android:id="@+id/divider12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="18dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView59"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#212121"
            android:text="Create Withdrawal Password"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView59"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#212121"
            android:lineSpacingExtra="4sp"
            android:text="Please create a withdrawal password, this will need â€¨to be entered every time you add a new bank account for security purposed."
            app:layout_constraintTop_toBottomOf="@+id/divider12" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp" android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="18dp" android:id="@+id/textView60"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/border"
              android:padding="15dp"
              android:hint="Password"
              android:inputType="textPassword"
              android:drawableRight="@drawable/info_icon_copy"
              app:layout_constraintTop_toBottomOf="@+id/textView60" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="18dp" android:layout_marginEnd="168dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
              app:layout_constraintHorizontal_bias="0.0" android:id="@+id/pass"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/border"
              android:padding="15dp"
              android:hint="Confirm Password"
              android:inputType="textPassword"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="18dp" android:layout_marginEnd="168dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="15dp"
              app:layout_constraintTop_toBottomOf="@+id/pass" android:id="@+id/confirm_pass"/>
    <ImageView android:layout_width="200dp"
               android:layout_height="52dp"
               android:id="@+id/pass_hint"
               android:src="@drawable/pass_info_popup"
               android:layout_marginTop="52dp"
               app:layout_constraintTop_toBottomOf="@+id/textView60" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.82"/>
</androidx.constraintlayout.widget.ConstraintLayout>
