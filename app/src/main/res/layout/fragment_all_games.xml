<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#00FAF6F6">
    <TextView
            android:layout_width="177dp"
            android:layout_height="37dp"
            android:textSize="28sp"
            android:textColor="#252525"
            android:lineSpacingExtra="8sp"
            android:text="@string/Casino"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/textView58"
    />
    <Button
            android:text="@string/filter"
            android:layout_width="80dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="8sp"
            android:layout_height="30dp"
            android:id="@+id/filter_button" android:background="@drawable/button_border"
            android:drawableStart="@drawable/filter"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView58" android:layout_marginStart="40dp"
            android:layout_marginEnd="97dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/sort"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:id="@+id/sort_button" android:background="@drawable/button_border"
            android:drawableStart="@drawable/sort"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".fragment.AllGames">

        <ExpandableListView
                android:id="@+id/filter_List_parents"
                android:layout_height="match_parent"
                android:layout_width="161dp"
                 />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>