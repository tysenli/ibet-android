<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#00FAF6F6">
    <LinearLayout android:layout_width="match_parent" android:layout_height="30dp"
                  android:id="@+id/casino_bar"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp">


        <TextView
                android:text="@string/Casino"
                android:layout_width="177dp"
                android:layout_height="match_parent" android:id="@+id/CasinoTitle"
                android:layout_alignParentStart="true" android:layout_marginStart="30dp"
                android:textSize="28sp"
                android:textColor="#252525"
                android:lineSpacingExtra="8sp"  android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
        <Button
                android:text="@string/filter"
                android:textAllCaps="false"
                android:paddingLeft="12dp"
                android:layout_width="80dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="8sp"
                android:layout_height="match_parent"
                android:id="@+id/filter_button" android:background="@drawable/button_border"
                android:drawableStart="@drawable/filter"
                android:layout_toStartOf="@+id/sort_button"/>
        <Button
                android:text="@string/sort"
                android:layout_width="80dp"
                android:paddingLeft="12dp"
                android:textAllCaps="false"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:id="@+id/sort_button" android:background="@drawable/button_border"
                android:drawableStart="@drawable/sort"

        />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filter_expan"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/casino_bar" android:layout_marginTop="16dp">
        <ExpandableListView
                android:id="@+id/filter_List_parents"
                android:divider="#868686"
                android:dividerHeight="0.5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:groupIndicator="@null"

                />


    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sort_expan"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/casino_bar" android:layout_marginTop="16dp">
        <ListView
                android:id="@+id/sort_List"
                android:divider="#868686"
                android:dividerHeight="0.5dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>