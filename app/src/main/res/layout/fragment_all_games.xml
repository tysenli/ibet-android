<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#00FAF6F6">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="36dp"
                    android:id="@+id/casino_bar" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0.6" android:layout_marginBottom="10dp">


        <TextView
                android:text="@string/Casino"
                android:layout_width="177dp"
                android:layout_height="match_parent" android:id="@+id/CasinoTitle"
                android:layout_alignParentStart="true" android:layout_marginStart="30dp"
                android:textSize="28sp"
                android:textColor="#252525"
                android:lineSpacingExtra="8sp" android:layout_marginTop="-1dp" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="1dp"/>
        <Button
                android:text="@string/filter"
                android:layout_width="80dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="8sp"
                android:layout_height="30dp"
                android:id="@+id/filter_button" android:background="@drawable/button_border"
                android:drawableStart="@drawable/filter"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="8dp" android:layout_alignParentTop="true" android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/sort_button"/>
        <Button
                android:text="@string/sort"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:id="@+id/sort_button" android:background="@drawable/button_border"
                android:drawableStart="@drawable/sort"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
        />

    </RelativeLayout>
    <LinearLayout
            android:layout_width="393dp"
            android:layout_height="612dp"
            android:id="@+id/filter_expan" android:layout_marginTop="10dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/casino_bar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="46dp">
        <ExpandableListView
                android:id="@+id/filter_List_parents"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginBottom="-82dp"
                android:layout_marginStart="-2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="149dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>