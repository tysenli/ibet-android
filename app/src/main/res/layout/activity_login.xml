<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:layout_width="240dp"
            android:layout_height="18dp"
            android:id="@+id/sign_up_here" app:layout_constraintStart_toStartOf="parent"
            android:text="@string/signup_now"
            android:letterSpacing="0.03"
            android:textSize="16sp"
            android:textColor="#212121"
            app:layout_constraintTop_toBottomOf="@+id/userlogin" android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="Login."
            android:layout_width="68dp"
            android:layout_height="43dp"
            android:textColor="#212121"
            android:id="@+id/tv_login" android:layout_marginTop="26dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:fontFamily="sans-serif"
            android:textSize="24sp" android:typeface="normal" android:textStyle="bold" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_email"
            android:layout_marginStart="8dp"
            android:hint=" EMAIL ADDRESS"
            android:textColorHint="#212121"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:background="@drawable/border"
            android:singleLine="false" android:selectAllOnFocus="false"
            android:autofillHints="" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_login" app:layout_constraintHorizontal_bias="0.507"/>


    <TextView
            android:text="This will be used to log in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_password1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/login_email" android:layout_marginTop="11dp"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password" android:layout_marginTop="24dp"
            android:hint=" PASSWORD"
            android:textColorHint="#212121"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/tv_password1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:autofillHints="" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <!--
    <CheckBox
            android:text="@string/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox1" android:textSize="14sp"
            android:textStyle="italic" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/login_password" android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="28dp"/>
            -->
    <CheckBox
            android:text="Keep me logged in on this device"
            android:textColor="#747175"
            android:textSize="15sp"
            android:lineSpacingExtra="6.3sp"
            android:layout_width="268dp"
            android:layout_height="43dp"
            android:id="@+id/checkBox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="102dp" app:layout_constraintTop_toBottomOf="@+id/login_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.527"/>
    <!--
    <Button
            android:id="@+id/usersignup"
            android:layout_width="378dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@android:color/widget_edittext_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            android:textSize="16sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/sign_up_here"/>
     -->
    <Button
            android:id="@+id/userlogin"
            android:layout_width="272dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/btn_red"
            android:text="@string/log_in"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" android:layout_marginTop="12dp"/>

    <TextView
            android:text="@string/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.03"
            android:textSize="16sp"
            android:textColor="#212121"
            android:id="@+id/forgot_password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/checkBox"/>


</android.support.constraint.ConstraintLayout>